<Window x:Class="DAS_DW.DataBinding.DataContextSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAS_DW"
        mc:Ignorable="d"
        Title="MainWindow4" Height="450" Width="800">
    <Grid>
        <WrapPanel>
            <TextBlock Text="Window Title: "/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
        </WrapPanel>
        <WrapPanel Margin="0, 30, 0, 0">
            <TextBlock Text="Window demensions: "/>
            <TextBox Text="{Binding Width}" Width="50"/>
            <TextBlock Text=" x "/>
            <TextBox Text="{Binding Height}" Width="50"/>
        </WrapPanel>
        <StackPanel Margin="0,68,0,259">
            <TextBox x:Name="txtValue"/>
            <WrapPanel Margin="0, 30">
                <TextBlock Text="Value: " FontWeight="Bold"/>
                <TextBlock x:Name="lblValue"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
